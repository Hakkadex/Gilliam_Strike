Write-Host "`n[ğŸ”] Running Gilliam's Patch Debug..." -ForegroundColor Cyan

function Check-Registry {
    param ($Path, $Name, $Expected)
    $val = Get-ItemProperty -Path $Path -Name $Name -ErrorAction SilentlyContinue | Select-Object -ExpandProperty $Name -ErrorAction SilentlyContinue
    if ($val -ne $Expected) {
        Write-Host " [âœ—] $Name is not set to $Expected in $Path" -ForegroundColor Red
    } else {
        Write-Host " [âœ“] $Name is correctly set to $Expected" -ForegroundColor Green
    }
}

function Check-Service {
    param ($Name)
    $svc = Get-Service -Name $Name -ErrorAction SilentlyContinue
    if ($svc -and $svc.Status -ne "Stopped") {
        Write-Host " [âœ—] $Name is still running." -ForegroundColor Red
    } elseif ($svc -and $svc.StartType -ne 'Disabled') {
        Write-Host " [âœ—] $Name is not disabled." -ForegroundColor Red
    } else {
        Write-Host " [âœ“] $Name is stopped and disabled." -ForegroundColor Green
    }
}

function Check-ScheduledTask {
    param ($TaskPath)
    try {
        $task = Get-ScheduledTask -TaskPath $TaskPath -ErrorAction SilentlyContinue
        if ($task -and $task.State -ne 'Disabled') {
            Write-Host " [âœ—] $TaskPath is still active." -ForegroundColor Red
        } else {
            Write-Host " [âœ“] $TaskPath is disabled." -ForegroundColor Green
        }
    } catch {
        Write-Host " [âœ“] $TaskPath not found or already nuked." -ForegroundColor Green
    }
}

