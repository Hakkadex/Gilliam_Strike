### â”€â”€â”€ APPX BLOAT DETECTION â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
Write-Host "`n[ğŸ”] Detecting leftover bloatware apps..."
$bloatApps = @(
  "Microsoft.WindowsFeedbackHub",
  "Microsoft.GetHelp",
  "Microsoft.Getstarted",
  "Microsoft.XboxGamingOverlay",
  "Microsoft.MicrosoftSolitaireCollection",
  "Microsoft.MicrosoftOfficeHub",
  "Microsoft.SkypeApp"
)

foreach ($app in $bloatApps) {
    $installed = Get-AppxPackage -AllUsers | Where-Object {$_.Name -eq $app}
    if ($installed) {
        Write-Host " [âœ—] $app is still installed." -ForegroundColor Red
    } else {
        Write-Host " [âœ“] $app is removed." -ForegroundColor Green
    }
}

